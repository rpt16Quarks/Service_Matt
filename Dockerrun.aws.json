{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "data",
      "host": {
        "sourcePath": "/var/app/current/db/data"
      }
    },
    {
     "name": "web",
     "host": {
       "sourcePath": "/var/app/current/"
     }
   }
  ],
  "containerDefinitions": [
    {
      "name": "fec_client",
      "image": "mattraetz/fec_app:1.0",
      "memory": 128,
      "environment": [
          {
            "name": "ENVIRONMENT",
            "value": "production"
          },
          {
            "name": "MYSQL_HOST",
            "value": "fec_db"
          }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3003
        }
      ],
      "links": [
        "fec_db"
      ]
    },
    {
      "name": "fec_db",
      "image": "mattraetz/fec_db:1.0",
      "memory": 128,
      "environment": [
        {
          "name": "MYSQL_ALLOW_EMPTY_PASSWORD",
          "value": "yes"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "data",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ]
}